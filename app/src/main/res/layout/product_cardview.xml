<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/item_cardview"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginStart="@dimen/material_activity_margin"
	android:layout_marginEnd="@dimen/material_activity_margin"
	android:layout_marginTop="@dimen/material_margin_4dp"
	android:layout_marginBottom="@dimen/material_margin_4dp"
	android:clickable="true"
	android:focusable="true"
	android:foreground="?android:attr/selectableItemBackground"
	app:cardCornerRadius="@dimen/material_cardview_corner"
	app:cardElevation="@dimen/material_elevation_4dp">

	<LinearLayout
		android:id="@+id/item_cardview_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/item_name"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:ellipsize="end"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical"
			android:lines="1"
			android:paddingTop="@dimen/material_margin_8dp"
			android:paddingLeft="@dimen/material_activity_margin"
			android:paddingRight="@dimen/material_activity_margin"
			android:paddingBottom="@dimen/material_margin_8dp"
			android:textSize="16sp"
			tools:text="Shake Shack burger!" />

		<ImageView
			android:id="@+id/item_image"
			android:layout_width="@dimen/image_small_size"
			android:layout_height="@dimen/image_small_size"
			android:scaleType="centerCrop"
			android:layout_gravity="center_vertical"
			android:layout_margin="@dimen/material_activity_margin" />

	</LinearLayout>

</androidx.cardview.widget.CardView>
