<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="shapeAppearanceLargeComponent">@style/BottomSheetNativeTheme</item>
		<item name="android:itemTextAppearance">@style/PopupMenuTextAppearance</item>
	</style>

	<style name="PopupMenuTextAppearance" parent="android:TextAppearance.Small">
		<item name="android:textColor">?attr/colorOnBackground</item>
	</style>

	<style name="BottomSheetNativeTheme" parent="ShapeAppearance.MaterialComponents.LargeComponent">
		<item name="cornerFamily">rounded</item>
		<item name="cornerSize">16dp</item>
	</style>

</resources>
