<resources>

	<style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="shapeAppearanceLargeComponent">@style/BottomSheetNativeTheme</item>
		<item name="android:itemTextAppearance">@style/PopupMenuTextAppearance</item>
<!--		<item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>-->
	</style>

	<style name="PopupMenuTextAppearance" parent="android:TextAppearance.Small">
		<item name="android:textColor">?attr/colorOnBackground</item>
	</style>

	<!-- Styling the corners of BottomSheet view via default platform/library provided settings! -->
	<style name="BottomSheetNativeTheme" parent="ShapeAppearanceOverlay.MaterialComponents.BottomSheet">
		<item name="cornerFamily">rounded</item>
		<item name="cornerSize">16dp</item>
	</style>

	<!-- Styling the corners of BottomSheet view via custom drawable! -->
	<!-- Enable bottomSheetDialogTheme above in order to use this! -->
	<style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
		<item name="bottomSheetStyle">@style/AppModalStyle</item>
	</style>

	<style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
		<item name="android:background">@drawable/bottom_sheet_round_corners</item>
	</style>

</resources>
